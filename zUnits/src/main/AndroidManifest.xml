<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zlisinski.zunits"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zlisinski.zunits.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zlisinski.zunits.DistanceActivity"
            android:label="@string/title_activity_distance"
            android:parentActivityName="com.zlisinski.zunits.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zlisinski.zunits.MainActivity" />

            <intent-filter>
                <action android:name="com.zlisinski.zunits.DistanceActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zlisinski.zunits.MassActivity"
            android:label="@string/title_activity_mass"
            android:parentActivityName="com.zlisinski.zunits.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zlisinski.zunits.MainActivity" />

            <intent-filter>
                <action android:name="com.zlisinski.zunits.MassActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zlisinski.zunits.VolumeActivity"
            android:label="@string/title_activity_volume"
            android:parentActivityName="com.zlisinski.zunits.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zlisinski.zunits.MainActivity" />
        </activity>
    </application>

</manifest>
